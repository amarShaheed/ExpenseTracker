
@page
@model ExpenseTracker.Pages.IndexModel
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Home";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #0d6efd, #20c997);
        color: white;
        padding: 5rem 1rem;
        text-align: center;
    }

        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero p {
            font-size: 1.25rem;
            opacity: 0.9;
        }

        .hero .btn-primary {
            background-color: white;
            color: #0d6efd;
            font-weight: bold;
            border-radius: 30px;
            padding: 0.75rem 2rem;
            transition: 0.3s ease-in-out;
        }

            .hero .btn-primary:hover {
                background-color: #f8f9fa;
                transform: scale(1.05);
            }

    /* Features Section */
    .features {
        margin-top: 3rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        padding: 0 1rem;
    }

    .feature-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        text-align: center;
        padding: 2rem 1rem;
        transition: transform 0.3s ease-in-out;
    }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-card i {
            font-size: 2rem;
            color: #0d6efd;
            margin-bottom: 1rem;
        }

    /* CTA Section */
    .cta {
        background: #f8f9fa;
        padding: 3rem 1rem;
        text-align: center;
        margin-top: 3rem;
    }

        .cta h2 {
            margin-bottom: 1rem;
        }
</style>

<!-- Hero Section -->
<section class="hero">
    <h1>Welcome to ExpenseTracker</h1>
    <p>Track your expenses, manage your budget, and gain control over your finances.</p>
    <a class="btn btn-primary btn-lg mt-3" href="/Expenses">Start Tracking</a>
</section>

<!-- Features Section -->
<section class="features container">
    <div class="feature-card">
        <i class="bi bi-bar-chart-fill"></i>
        <h5>Insightful Dashboard</h5>
        <p>View total expenses, largest categories, and trends at a glance.</p>
    </div>
    <div class="feature-card">
        <i class="bi bi-wallet2"></i>
        <h5>Track Your Spending</h5>
        <p>Log every expense with categories, notes, and dates.</p>
    </div>
    <div class="feature-card">
        <i class="bi bi-graph-up-arrow"></i>
        <h5>Analyze & Save</h5>
        <p>Understand your habits and plan a better budget for the future.</p>
    </div>
</section>

<!-- Call-to-Action Section -->
<section class="cta">
    <h2>Ready to Take Control of Your Money?</h2>
    <p>Get started today and see where your money goes.</p>
    <a class="btn btn-success btn-lg" href="/Categories">Add Your First Category</a>
</section>
