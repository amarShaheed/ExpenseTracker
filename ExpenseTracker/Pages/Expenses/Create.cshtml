@model ExpenseTracker.Pages.Expenses.CreateModel
@{
    ViewData["Title"] = "Create Expense";
}

<h1>Create Expense</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group mb-2">
        <label asp-for="Expense.UserId"></label>
        <input asp-for="Expense.UserId" class="form-control" />
        <span asp-validation-for="Expense.UserId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Expense.CategoryId"></label>
        <select asp-for="Expense.CategoryId" asp-items="Model.CategoryOptions" class="form-control"></select>
        <span asp-validation-for="Expense.CategoryId" class="text-danger"></span>
    </div>


    <div class="form-group mb-2">
        <label asp-for="Expense.ExpenseDate"></label>
        <input asp-for="Expense.ExpenseDate" class="form-control" type="date" />
        <span asp-validation-for="Expense.ExpenseDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Expense.Notes"></label>
        <input asp-for="Expense.Notes" class="form-control" />
        <span asp-validation-for="Expense.Notes" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Expense.Amount"></label>
        <input asp-for="Expense.Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Expense.Amount" class="text-danger"></span>
    </div>

    

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
